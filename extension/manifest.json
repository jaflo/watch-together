{
	"name": "Together: Watch videos with friends",
	"version": "0.0.1",
	"manifest_version": 2,
	"description": "Watch videos outside of Netflix and YouTube with friends.",
	"homepage_url": "https://projects.loud.red/together",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png",
		"512": "icons/icon512.png"
	},
	"background": {
		"page": "src/bg/background.html",
		"persistent": true
	},
	"browser_action": {
		"default_icon": "icons/icon512.png",
		"default_title": "Watch video with friends",
		"default_popup": "src/browser_action/browser_action.html"
	},
	"permissions": ["webRequest", "*://*/*"]
}
